#include <iostream>
using namespace std;

void unos(int& n) {
	do {
		cout << "Unesi n: "; cin >> n;
		if (n < 10 || n > 1000)
			cout << "10 <= n <= 1000 \n";
	} while (n < 10 || n > 1000);
}
bool prost(int n) {
	for (int i = 2; i < n; i++) 
		if (n % i == 0)
			return false;
	return true;
}
void ispis(int n) {
	int broj = 0;
	int brojac = 0;
	for (int i = 0; i <= n; i++) {
		broj = rand() % 1000 + 1;
		cout << broj << '\n';
		if (prost(broj) == true)
			brojac++;
	}
	cout << "\nPostotak prostih brojeva iznosi: " << brojac * 100 / n << "%";
}
int main() {
	srand(time(NULL));
	int n;
	unos(n);
	ispis(n);

	system("pause>nul");
	return 0;
}
